<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="0.1"
          >
            <ImageView
                android:text="Button 1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/img_description"
                />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="0.1"
                >
                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_condition"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvCondition"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="0.1"
                >
                <ImageView
                    android:text="Button 1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_temperatures"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvAvgTemp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="0.1"
                >
                <ImageView
                    android:text="Button 1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_humidity"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvAvgHumidity"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="0.1"
                >
                <ImageView
                    android:text="Button 1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_light"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvAvgLight"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="0.1"
                >
                <ImageView
                    android:text="Button 1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/img_moisture"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvAvgSoilMoisture"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
